<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_style"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_vehicles_header_date_text_view"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:padding="8dp"
            android:text="@string/header_label" />

        <TextView
            android:id="@+id/item_vehicles_header_collection_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/item_vehicles_header_date_text_view"
            android:padding="8dp" />

        <TextView
            android:id="@+id/item_vehicles_header_expense_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/item_vehicles_header_collection_text_view"
            android:padding="8dp" />

        <TextView
            android:id="@+id/item_vehicles_header_profit_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/item_vehicles_header_collection_text_view"
            android:padding="8dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>